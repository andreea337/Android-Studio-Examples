<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkBoxMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="music"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxSing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sing"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxDance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dance"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="travel"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="reading"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxWriting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="writing"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxClimbing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="climbing"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxSwim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="swim"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="exercise"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxFitness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fitness"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="photo"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="food"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chkBoxPainting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="painting"
                android:textSize="30sp" />

        <Button
            android:id="@+id/btn"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

        <TextView
            android:id="@+id/txtDisplay"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>